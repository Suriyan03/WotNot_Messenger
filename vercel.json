{
  "version": 2,
  "builds": [
    {
      "src": "frontend/my-vue-app/index.html",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/my-vue-app/dist",
        "installCommand": "npm install --prefix frontend/my-vue-app",
        "buildCommand": "npm run build --prefix frontend/my-vue-app"
      }
    },
    {
      "src": "backend/api/index.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/api/index.py"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/my-vue-app/index.html"
    }
  ]
}
